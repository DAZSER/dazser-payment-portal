{
  "version": "1.0.0",
  "name": "dazser-payment-portal",
  "description": "",
  "main": "index.html",
  "//": [
    "js-compile: This compiles the typescript, then it removes the module import from the ux.js file. (I'm statically calling a <script src> tag in html",
    "All my PRODUCTION dependencies are in the dependencies, even though I technically don't need formdata, inputmask, and weakmap node modules in production (see vendor.js)"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "js": "npm-run-all --parallel js-compile js-vendor sls-compile",
    "js-lint": "tslint -c tslint.json 'typescript/*.ts'",
    "js-compile": "npm-run-all --sequential js-tsc js-sed-1 js-sed-2 js-sed-3",
    "js-tsc": "tsc --removeComments --target es5 --outdir public/js/ typescript/frontend/*.ts",
    "js-sed-1": "sed -i '/Object.defineProperty(exports, \"__esModule\", { value: true });/d' public/js/ux.js",
    "js-sed-2": "sed -i '/var big_js_1 = require(\"big.js\");/d' public/js/ux.js",
    "js-sed-3": "sed -i 's/big_js_1.//g' public/js/ux.js",
    "sls-compile": "tsc --removeComments --target ES2017 --noEmitHelpers --outDir . typescript/lambda/*.ts",
    "js-deps": "cp node_modules/big.js/big.min.js public/js/ && cp node_modules/formdata-polyfill/formdata.min.js public/js/ && cp node_modules/weakmap-polyfill/weakmap-polyfill.min.js public/js/",
    "js-vendor": "awk 1 node_modules/inputmask/dist/min/inputmask/dependencyLibs/inputmask.dependencyLib.min.js node_modules/inputmask/dist/min/inputmask/inputmask.min.js node_modules/inputmask/dist/min/inputmask/inputmask.numeric.extensions.min.js node_modules/big.js/big.min.js node_modules/weakmap-polyfill/weakmap-polyfill.min.js node_modules/formdata-polyfill/formdata.min.js > public/js/vendor.js",
    "js-minify": "",
    "js-uglify": "",
    "img": "cp images/jklogo-clear-SM2-fs8.png public/images/jklogo.png",
    "css": "npm-run-all --parallel css-lint css-compile --sequential css-prefix css-minify",
    "css-lint": "stylelint --config .stylelintrc --syntax scss \"scss/**/*.scss\"",
    "css-compile": "node-sass --output-style expanded --precision 6 scss/main.scss public/css/main.css",
    "css-prefix": "postcss --config postcss.config.js --replace \"public/css/*.css\" \"!public/css/*.min.css\"",
    "css-minify": "cleancss --level 1 --output public/css/main.min.css public/css/main.css",
    "clean": "rm -rf public/js/** public/css/** public/images/**",
    "compile": "npm-run-all --sequential clean --parallel img css js",
    "deploy-prod": "sls deploy --stage prod --customDomainEnabled true -v",
    "deploy-dev": "sls deploy --stage dev --customDomainEnabled false -v"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.15",
    "@types/big.js": "^4.0.5",
    "@types/express": "^4.16.0",
    "@types/mysql": "^2.15.5",
    "@types/node": "^10.12.10",
    "@types/stripe": "^6.0.4",
    "@types/stripe-v3": "^3.0.8",
    "@types/validator": "^9.4.3",
    "autoprefixer": "^9.3.1",
    "aws-sdk": "^2.368.0",
    "clean-css-cli": "^4.2.1",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.0.1",
    "serverless-domain-manager": "^2.6.6",
    "serverless-offline": "^3.31.3",
    "stylelint": "^9.9.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.4.0",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1"
  },
  "dependencies": {
    "big.js": "^5.2.2",
    "express": "^4.16.4",
    "formdata-polyfill": "^3.0.13",
    "inputmask": "^4.0.3",
    "mysql": "^2.16.0",
    "serverless-http": "^1.8.0",
    "stripe": "^6.17.0",
    "validator": "^10.9.0",
    "weakmap-polyfill": "^2.0.0"
  }
}
